<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE SPEC SYSTEM "../dat/SPEC.dtd">
<SPEC>
	<MODULE>
		<MTYPE>
			<NAME VALUE="STARTJOB" />
			<NAME VALUE="STARTWORKER" />
			<NAME VALUE="DONE" />
			<NAME VALUE="QUITWORKER1" />
			<NAME VALUE="WORKERSTOP1" />
			<NAME VALUE="QUITWORKER2" />
			<NAME VALUE="WORKERSTOP2" />
			<NAME VALUE="STARTJOBQ" />
			<NAME VALUE="STOPJOBQ" />
			<NAME VALUE="JOBQSTOPPED" />
		</MTYPE>
	</MODULE>
	<MODULE>
		<PROCTYPE>
			<NAME VALUE="TEST" />
			<SEQUENCE>
				<STEP>
					<DECLLIST>
						<DECL>
							<TYPENAME>
								<NUM />
							</TYPENAME>
							<IVAR>
								<NAME VALUE="COUNT" />
							</IVAR>
						</DECL>
					</DECLLIST>
				</STEP>
				<STEP>
					<STMT>
						<ASSIGN>
							<VARREF>
								<NAME VALUE="COUNT" />
							</VARREF>
							<EXPR>
								<VARREF>
									<NAME VALUE="1,0" />
								</VARREF>
							</EXPR>
						</ASSIGN>
					</STMT>
				</STEP>
				<!-- STARTING JOB QUEUE -->
				<STEP>
					<STMT>
						<SEND>
							<NAME VALUE="STARTJOBQ" />
						</SEND>
					</STMT>
				</STEP>

				<!-- STARTING 4 JOBS FOR 2 WORKERS -->
				<STEP>
					<STMT>
						<SEND>
							<NAME VALUE="STARTJOB" />
						</SEND>
					</STMT>
				</STEP>
				<STEP>
					<STMT>
						<SEND>
							<NAME VALUE="STARTJOB" />
						</SEND>
					</STMT>
				</STEP>
				<STEP>
					<STMT>
						<SEND>
							<NAME VALUE="STARTJOB" />
						</SEND>
					</STMT>
				</STEP>
				<STEP>
					<STMT>
						<SEND>
							<NAME VALUE="STARTJOB" />
						</SEND>
					</STMT>
				</STEP>
				
				<!-- STOPPING THE JOB QUEUE -->
				<STEP>
					<STMT>
						<SEND>
							<NAME VALUE="STOPJOBQ" />
						</SEND>
					</STMT>
				</STEP>
				<STEP>
					<STMT>
						<RECEIVE>
							<NAME VALUE="JOBQSTOPPED" />
						</RECEIVE>
					</STMT>
				</STEP>
				<STEP>
					<STMT>
						<ASSERT EVAL="TRUE" VARUSE="COUNT" LABEL="L1">
							<EXPR>
								<VARREF>
									<NAME VALUE="COUNT" />
								</VARREF>
								<OP VALUE="==" />
								<CONST VALUE="4" />
							</EXPR>
						</ASSERT>
					</STMT>
				</STEP>
			</SEQUENCE>
		</PROCTYPE>
	</MODULE>



	<MODULE>
		<PROCTYPE>
			<NAME VALUE="WORKER1" />
			<SEQUENCE>
				<STEP>
					<STMT>
						<DO>
							<OPTION>
								<SEQUENCE>
									<STEP>
										<STMT>
											<ATOMIC>
												<SEQUENCE>
													<STEP>
														<STMT>
															<RECEIVE>
																<NAME VALUE="STARTWORKER" />
															</RECEIVE>
														</STMT>
													</STEP>
													<STEP>
														<STMT>
															<ASSIGN EVAL="TRUE" VARUSE="COUNT" LABEL="L2">
																<VARREF>
																	<NAME VALUE="COUNT" />
																</VARREF>
																<EXPR>
																	<VARREF>
																		<NAME VALUE="1,COUNT" />
																	</VARREF>
																	<OP VALUE="+" />
																	<VARREF>
																		<NAME VALUE="1,1" />
																	</VARREF>
																</EXPR>
															</ASSIGN>
														</STMT>
													</STEP>
													<STEP>
														<STMT>
															<SEND>
																<NAME VALUE="DONE" />
															</SEND>
														</STMT>
													</STEP>
												</SEQUENCE>
											</ATOMIC>
										</STMT>
									</STEP>

								</SEQUENCE>
							</OPTION>
							<OPTION>
								<SEQUENCE>
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="QUITWORKER1" />
											</RECEIVE>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<SEND>
												<NAME VALUE="WORKERSTOP1" />
											</SEND>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<BREAK />
										</STMT>
									</STEP>
								</SEQUENCE>
							</OPTION>
						</DO>
					</STMT>
				</STEP>
			</SEQUENCE>
		</PROCTYPE>
	</MODULE>


	<MODULE>
		<PROCTYPE>
			<NAME VALUE="WORKER2" />
			<SEQUENCE>
				<STEP>
					<STMT>
						<DO>
							<OPTION>
								<SEQUENCE>
									<STEP>
										<STMT>
											<ATOMIC>
												<SEQUENCE>
													<STEP>
														<STMT>
															<RECEIVE>
																<NAME VALUE="STARTWORKER" />
															</RECEIVE>
														</STMT>
													</STEP>
													<STEP>
														<STMT>
															<ASSIGN EVAL="TRUE" VARUSE="COUNT" LABEL="L3">
																<VARREF>
																	<NAME VALUE="COUNT" />
																</VARREF>
																<EXPR>
																	<VARREF>
																		<NAME VALUE="1,COUNT" />
																	</VARREF>
																	<OP VALUE="+" />
																	<VARREF>
																		<NAME VALUE="1,1" />
																	</VARREF>
																</EXPR>
															</ASSIGN>
														</STMT>
													</STEP>
													<STEP>
														<STMT>
															<SEND>
																<NAME VALUE="DONE" />
															</SEND>
														</STMT>
													</STEP>
												</SEQUENCE>
											</ATOMIC>
										</STMT>
									</STEP>

								</SEQUENCE>
							</OPTION>
							<OPTION>
								<SEQUENCE>
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="QUITWORKER2" />
											</RECEIVE>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<SEND>
												<NAME VALUE="WORKERSTOP2" />
											</SEND>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<BREAK />
										</STMT>
									</STEP>
								</SEQUENCE>
							</OPTION>
						</DO>
					</STMT>
				</STEP>
			</SEQUENCE>
		</PROCTYPE>
	</MODULE>

	<MODULE>
		<PROCTYPE>
			<NAME VALUE="JOBQ" />
			<SEQUENCE>
				<STEP>
					<STMT>
						<RECEIVE>
							<NAME VALUE="STARTJOBQ" />
						</RECEIVE>
					</STMT>
				</STEP>
				<STEP>
					<STMT>
						<DO>
							<OPTION>
								<SEQUENCE>
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="STARTJOB" />
											</RECEIVE>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<SEND>
												<NAME VALUE="STARTWORKER" />
											</SEND>
										</STMT>
									</STEP>
								</SEQUENCE>
							</OPTION>
							<OPTION>
								<SEQUENCE>
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="STOPJOBQ" />
											</RECEIVE>
										</STMT>
									</STEP>
									<!-- WAIT FOR THE JOBS TO FINSH FIRST -->
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="DONE" />
											</RECEIVE>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="DONE" />
											</RECEIVE>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="DONE" />
											</RECEIVE>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="DONE" />
											</RECEIVE>
										</STMT>
									</STEP>
									
									<!-- NOW STOP ALL WORKERS -->
									<STEP>
										<STMT>
											<SEND>
												<NAME VALUE="QUITWORKER1" />
											</SEND>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<SEND>
												<NAME VALUE="QUITWORKER2" />
											</SEND>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="WORKERSTOP1" />
											</RECEIVE>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<RECEIVE>
												<NAME VALUE="WORKERSTOP2" />
											</RECEIVE>
										</STMT>
									</STEP>
									<STEP>
										<STMT>
											<SEND>
												<NAME VALUE="JOBQSTOPPED" />
											</SEND>
										</STMT>
									</STEP>

								</SEQUENCE>
							</OPTION>

						</DO>
					</STMT>
				</STEP>
			</SEQUENCE>
		</PROCTYPE>
	</MODULE>
</SPEC>